{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["asset_id", "asset_type", "p_kw", "status"],
  "properties": {
    "asset_id": { "type": "string" },
    "asset_type": {
      "type": "string",
      "enum": ["pv", "bess", "load", "wind", "grid"]
    },
    "p_kw": { "type": "number" },
    "q_kvar": { "type": "number" },
    "soc": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "status": { "type": "string" }
  }
}
